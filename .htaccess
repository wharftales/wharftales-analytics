# Optional: Enable clean URLs via PHP router
# This .htaccess is OPTIONAL - the app works without it!
# If you have issues, just delete this file.

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Don't rewrite real files or directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Send /site/ URLs to index.php with original URI preserved
    RewriteRule ^site/(.*)$ index.php [L,QSA]
</IfModule>
