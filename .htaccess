# Optional: Enable clean URLs via PHP router
# This .htaccess is OPTIONAL - the app works without it!
# If you have issues, just delete this file.

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Don't rewrite real files or directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Send everything to index.php (which uses router.php)
    RewriteRule ^site/ index.php [L]
</IfModule>
